{% extends "layout.njk" %}

{% block content %}


    <section class="hero">

        <div class="intro">
            <h1>
                The best recipes
            </h1>
            <p>
                Learn how to build the best dishes with recipes created by professionals from all over the world.
            </p>
        </div>
        <img src="/assets/cozinheiro.png" alt="Chef foodfy">

    </section>

    <div class= "acess">
        <h2>
            Most accessed
        </h2>
    </div>

    <div class="wrapper">         
        <main>

            {% for recipe in recipes %}
            
                <div class="content">
                
                    <div class="card" id = "{{recipe.id}}">
                        <img src="{{recipe.image}}" alt="">
                        <h4>{{recipe.title}}</h4>
                        <p>{{recipe.author}}</p>                
                    </div>
                    
                </div>

            {% endfor %}

        </main> 
    </div>

    <script src='/scripts.js'></script>     

{% endblock %}        

