
{% extends "layout.njk" %}

{% block content %}

    <div class="wrapper">

        <main>
            {% for item in items %}
                <div class="content">
                    <div class="card" id = "{{item.id}}">
                        <img src="{{item.image}}" alt="imagem de {{item.image}}">
                        {% if item.featured %}
                            <div class='featured'>Featured</div>
                        {% endif %}
                        <h4>{{item.title}}</h4>
                        <p>{{item.author}}</p>               
                    </div>
                </div>
            {% endfor %} 
        </main>
            
    </div>    
    
    <script src='/scripts.js'></script>

{% endblock %}