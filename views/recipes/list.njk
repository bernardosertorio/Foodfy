
{% extends "layout.njk" %}

{% block content %}

    <div class="wrapper">

        <main>
            {% for recipe in recipes %}
                <div class="content">
                    <div class="card" id = "{{recipe.id}}">
                        <a href="recipes/{{recipe.id}}"> <img src="{{recipe.image_url}}" alt="imagem de {{recipe.image_url}}"> </a>
                        {% if item.featured %}
                            <div class='featured'>Featured</div>
                        {% endif %}
                        <h4>{{recipe.title}}</h4>
                        <p> by {{recipe.author}}</p>               
                    </div>
                </div>
            {% endfor %} 
        </main>
            
    </div>    
    
    <script src='/scripts.js'></script>

{% endblock %}